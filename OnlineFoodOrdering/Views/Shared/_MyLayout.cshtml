<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        @RenderSection("head", required: false)
        <meta charset="utf-8">
        <title>Index</title>

        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="">
        <meta name="description" content="">

        <link rel="stylesheet" href=@Url.Content("/Content/css/bootstrap.min.css")>
        <link rel="stylesheet" href=@Url.Content("/Content/css/animate.min.css")>
        <link rel="stylesheet" href=@Url.Content("/Content/css/font-awesome.min.css")>
        <link rel="stylesheet" href=@Url.Content("/Content/css/nivo-lightbox.css")>
        <link rel="stylesheet" href=@Url.Content("/Content/css/nivo_themes/default/default.css")>
        <link rel="stylesheet" href=@Url.Content("/Content/css/style.css")>
        <link href='https://fonts.googleapis.com/css?family=Roboto:400,500' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <section class="preloader">
            <div class="sk-spinner sk-spinner-pulse"></div>
        </section>

        <!-- navigation section -->
        <section class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon icon-bar"></span>
                        <span class="icon icon-bar"></span>
                        <span class="icon icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">Zentro</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="~/Home/Index#home" class="smoothScroll">HOME</a></li>
                        <li><a href="~/Home/Index#gallery" class="smoothScroll">FOOD GALLERY</a></li>
                        <li><a href="~/Home/Index#menu" class="smoothScroll">MENU</a></li>
                        <li><a href="~/Cart/Cart" class="smoothScroll">CHECK OUT</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="~/Login/Logout" class="smoothScroll">LOGOUT</a></li>
                        }
                        else {
                            <li><a href="~/Login/Login" class="smoothScroll">LOGIN</a></li>
                            <li><a href="~/Login/Register" class="smoothScroll">REGISTER</a></li>
                        }
                    </ul>
                </div>
            </div>
        </section>
       


        <div>
            @RenderBody();
        </div>


        <!-- footer section -->
        <footer class="parallax-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.6s">
                        <h2 class="heading">Contact Info.</h2>
                        <div class="ph">
                            <p><i class="fa fa-phone"></i> Phone</p>
                            <h4>xxx-xxxx-xxx</h4>
                        </div>
                        <div class="address">
                            <p><i class="fa fa-map-marker"></i> Our Location</p>
                            <h4>Bafal, Kathmandu, Nepal</h4>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.6s">
                        <h2 class="heading">Open Hours</h2>
                        <p>Sunday <span>10:30 AM - 10:00 PM</span></p>
                        <p>Mon-Fri <span>9:00 AM - 8:00 PM</span></p>
                        <p>Saturday <span>11:30 AM - 10:00 PM</span></p>
                    </div>
                    <div class="col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.6s">
                        <h2 class="heading">Follow Us</h2>
                        <ul class="social-icon">
                            <li><a href="#" class="fa fa-facebook wow bounceIn" data-wow-delay="0.3s"></a></li>
                            <li><a href="#" class="fa fa-twitter wow bounceIn" data-wow-delay="0.6s"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>


        <!-- copyright section -->
        <section id="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <h3>Zentro</h3>
                        <p>Copyright © Zentro Restaurant and Cafe

                    </div>
                </div>
            </div>
        </section>

        <!-- JAVASCRIPT JS FILES -->
        <script src=@Url.Content("/Content/js/jquery.js")></script>
        <script src=@Url.Content("/Content/js/bootstrap.min.js")></script>
        <script src=@Url.Content("/Content/js/jquery.parallax.js")></script>
        <script src=@Url.Content("/Content/js/smoothscroll.js")></script>
        <script src=@Url.Content("/Content/js/nivo-lightbox.min.js")></script>
        <script src=@Url.Content("/Content/js/wow.min.js")></script>
        <script src=@Url.Content("/Content/js/custom.js")></script>

    </body>
</html>
